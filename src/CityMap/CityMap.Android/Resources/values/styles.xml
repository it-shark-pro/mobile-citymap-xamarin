<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextAppearance.Base" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Base.Bold" parent="TextAppearance.Base">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Base.Bold.White" parent="TextAppearance.Base.Bold">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
